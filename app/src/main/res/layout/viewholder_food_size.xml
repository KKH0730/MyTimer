<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="com.life.myTimer.ui.main.MainViewModel" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="isLastItem"
            type="Boolean" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <View
            android:id="@+id/vLeftSpacer"
            android:layout_width="24dp"
            android:layout_height="0dp"
            android:visibility="@{position == 0 ? View.GONE : View.VISIBLE}"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="200dp"
            app:cardBackgroundColor="@color/color_283964"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSize"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:onClick="@{() -> viewModel.updateSelectedFoodSizePosition(position)}"
                tools:text="XL"/>

        </com.google.android.material.card.MaterialCardView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>